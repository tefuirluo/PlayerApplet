<!--pages/detail-video/detail-video.wxml-->
<!-- 1. video 组件播放视频 -->
<video 
	class="video" 
	src="{{MvUrl}}" 
	autoplay
	danmu-list="{{danmuList}}"
/>
<view class="info">
	{{mvInfo.name}}
	{{mvInfo.publishTime}}
</view>
<view class="relate">
	<block wx:for="{{relateVideo}}" wx:key="vid">
		<view class="item">
			<image src="{{item.coverUrl}}" mode="widthFix"/>
			<view>
				{{item.title}}
			</view>
		</view>
	</block>
</view>
 