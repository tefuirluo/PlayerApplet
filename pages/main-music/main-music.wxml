<!--pages/main-music/main-music.wxml-->
<!-- vant 搜索框 -->
<van-search
  value="{{ searchValue }}"
  shape="round"
	background="#fafafa"
  placeholder="请输入搜索关键词"
	bind:click-input="onSearchClick"
/>

<!-- 轮播图 -->
<view>
	<swiper class="banner" circular indicator-dots style="height: {{bannerHeight}}px;">
		<block wx:for="{{banners}}" wx:key="targetId">
			<swiper-item class="item">
				<image
				 	class="banner-image"
					src="{{item.imageUrl}}"
					mode="widthFix"
					bindload="onBannerImageLoad"
				/>
			</swiper-item>
		</block>
	</swiper>
</view>

<!-- 推荐歌曲的展示 -->
<view class="recommend">
	<area-header title="推荐歌曲" bind:moreClick="onRecommendMoreClick" />
</view>
<view class="ranking">
	<area-header title="巅峰榜" hasMore="{{false}}"/>
</view>
