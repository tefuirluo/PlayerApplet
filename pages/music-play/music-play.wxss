/* pages/music-play/music-play.wxss */
.bg-image, .bg-cover {
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	z-index: -1;
}
.bg-cover {
	background-color: rgba(0, 0, 0, .3);
	backdrop-filter: blur(20px);
}

/* 自定义导航 */
.nav {
	display: flex;
	/* justify-content: space-between; */
	height: 44px;
	color: #ffffff;
}
.left, .center, .right {
	display: flex;
	justify-content: center;
	align-items: center;
}
.nav .left, .nav .right {
	width: 120rpx;
}
.nav .center {
	flex: 1;
}
