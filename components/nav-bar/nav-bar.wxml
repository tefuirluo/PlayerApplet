<!--components/nav-bar/nav-bar.wxml-->
<view class="nav-bar">
	<view class="status" style="height: {{statusHeight}}px;"></view>
	<view class="nav">
		<view class="left">
			<view class="slot">
				<slot name="left"></slot>
			</view>
			<view class="default">
				<van-icon name="arrow-left" size="20px" bindtap="onGoBackLastPage"/>
			</view>
		</view>
		<view class="center">
			<view class="slot">
				<slot name="center"></slot>
				</view>
			<view class="default">
				{{title}}
			</view>
		</view>
		<view class="right"></view>
	</view>
</view>
